    <style name="CircularImageView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.CircularImageView</item>
    </style>

    <style name="ShapeAppearance.App.CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomImageCardViewStyle" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="cardBackground">#F0F</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_viewType">main</item>
        <item name="infoAreaBackground">@null</item>
        <item name="lbImageCardViewType">Title|Content</item>
    </style>

    <style name="CustomImageCardTheme" parent="Theme.Leanback">
        <item name="imageCardViewStyle">@style/CustomImageCardViewStyle</item>
        <item name="imageCardViewInfoAreaStyle">@style/CustomInfoStyle</item>
        <item name="imageCardViewTitleStyle">@style/CustomTitleStyle</item>
    </style>

    <style name="CustomInfoStyle" parent="Widget.Leanback.ImageCardView.InfoAreaStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="layout_viewType">info</item>
        <item name="android:paddingBottom">@dimen/info_padding_bottom</item>
        <item name="android:paddingEnd">@dimen/info_padding_horizontal</item>
        <item name="android:paddingStart">@dimen/info_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/info_padding_top</item>
        <item name="android:background">@color/info_bg_color</item>
    </style>

    <style name="CustomTitleStyle" parent="Widget.Leanback.ImageCardView.TitleStyle">
        <item name="android:textColor">@color/custom_text_color</item>
        <item name="android:textSize">@dimen/custom_text_size</item>
    </style>


    <style name="TextAppearance.Leanback.PlaybackMediaItemName" tools:override="true">
        <item name="android:textColor">#F33331</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>



    <style name="MySeekBar">
        <item name="android:progressBackgroundTint">@color/lb_playback_progress_primary_color</item>
        <item name="android:progressTint">@color/progressTint</item>
        <item name="android:colorControlActivated">@color/lb_playback_progress_primary_color</item>
    </style>

    <style name="TabBarText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="android:textSize">13sp</item>
        <item name ="android:drawableBottom">@drawable/tab_bar</item>
        <item name="android:textColor">@color/bar</item>

    </style>


</resources>