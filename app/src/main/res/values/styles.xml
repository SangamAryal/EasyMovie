    <style name="CustomImageCardViewStyle" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="cardBackground">#F0F</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_viewType">main</item>
        <item name="infoAreaBackground">@null</item>
        <item name="lbImageCardViewType">Title|Content</item>
    </style>
    <style name="CustomImageCardTheme" parent="Theme.Leanback">
        <item name="imageCardViewStyle">@style/CustomImageCardViewStyle</item>
        <item name="imageCardViewInfoAreaStyle">@style/CustomInfoStyle</item>
        <item name="imageCardViewTitleStyle">@style/CustomTitleStyle</item>
    </style>
    <style name="CustomInfoStyle" parent="Widget.Leanback.ImageCardView.InfoAreaStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="layout_viewType">info</item>
        <item name="android:paddingBottom">@dimen/info_padding_bottom</item>
        <item name="android:paddingEnd">@dimen/info_padding_horizontal</item>
        <item name="android:paddingStart">@dimen/info_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/info_padding_top</item>
        <item name="android:background">@color/info_bg_color</item>
    </style>
    <style name="CustomTitleStyle" parent="Widget.Leanback.ImageCardView.TitleStyle">
        <item name="android:textColor">@color/custom_text_color</item>
        <item name="android:textSize">@dimen/custom_text_size</item>
    </style>
